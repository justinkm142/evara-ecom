<!DOCTYPE html>
<html class="no-js" lang="en">


    <%- include('../partials/userHead.ejs') %>

<body>

    <%- include('../partials/userNav.ejs') %>

    <%- include('../partials/userNavMobile.ejs') %>
    
    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/index.html" rel="nofollow">Home</a>
                    <span></span> Pages
                    <span></span> Register
                </div>
            </div>
        </div>
        <section class="pt-75 pb-150">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 m-auto">
                        <div class="row">
                            <div class="col-lg-5">
                                <div class="login_wrap widget-taber-content p-30 background-white border-radius-10 mb-md-5 mb-lg-0 mb-sm-5" style="width:450px;">
                                    <img src="assets/imgs/page/avatar-1.jpg" alt="product image">
                                </div>
                            </div>
                            <div class="col-lg-1"></div>
                            <div class="col-lg-6">
                                <div class="login_wrap widget-taber-content p-30 background-white border-radius-5">
                                    <div class="padding_eight_all bg-white">
                                        <div class="heading_s1">
                                            <h3 class="mb-30">Create an Account</h3>
                                        </div>
                                        <p class="mb-50 font-sm">
                                            Your personal data will be used to support your experience throughout this website, to manage access to your account, and for other purposes described in our privacy policy
                                        </p>



                                        <form method="post" action="/page-login-register1.html" id="registerForm">
                                            <div class="form-group">
                                                <input type="text" name="name" placeholder="Name" id="userName" autocomplete="off">
                                                <span id="nameError" style="color: red;"></span>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" name="email" placeholder="Email" id="userEmail" autocomplete="off">
                                                <span id="emailError" style="color: red;"></span>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" name="phoneNumber" placeholder="Phone Number" id="userPhoneNumber" autocomplete="off">
                                                <span id="phoneError" style="color: red;"></span>
                                            </div>
                                            <div class="form-group">
                                                <input type="password" name="password" placeholder="Password" id="userPassword" autocomplete="off">
                                                <span id="passwordError" style="color: red;"></span>
                                            </div>
                                            <div class="form-group">
                                                <input type="password" name="confirmPassword" placeholder="Confirm password" id="confirmPassword" autocomplete="off">
                                                <span id="confirmError" style="color: red;"></span>
                                            </div>
                                            <div class="login_footer form-group">
                                                <div class="chek-form">
                                                    <div class="custome-checkbox">
                                                        <input class="form-check-input" type="checkbox" name="checkbox" id="exampleCheckbox12" value="">
                                                        <label class="form-check-label" for="exampleCheckbox12"><span>I agree to terms &amp; Policy.</span></label><br>
                                                        <span id="checkboxError" style="color: red;"></span>
                                                    </div>

                                                </div>
                                                <a href="page-privacy-policy.html"><i class="fi-rs-book-alt mr-5 text-muted"></i>Lean more</a>
                                            </div>
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-fill-out btn-block hover-up" name="submitNewUserData">Submit &amp; Register</button>
                                            </div>
                                        </form>


               
                                        <div class="text-muted text-center">Already have an account? <a href="/page-login-register.html">Sign in now</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include('../partials/userFooter.ejs') %>
</body>
<script>
    registerForm.addEventListener('submit', (e) => {
        document.getElementById("nameError").innerHTML="";
        document.getElementById("emailError").innerHTML="";
        document.getElementById("phoneError").innerHTML="";
        document.getElementById("confirmError").innerHTML="";
        document.getElementById("passwordError").innerHTML="";
        document.getElementById("checkboxError").innerHTML="";
      let messages = [];
      var format = /[!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?1234567890]+/;
      
      let userName=document.getElementById("userName");
        if (userName.value === '' || userName.value == null) {
            document.getElementById("nameError").innerHTML="Name is required";
            messages.push('Name is required');
        }
        else if (format.test(userName.value)){
            document.getElementById("nameError").innerHTML="Name should not contain specical character";
            messages.push('Name should not contain specical character');
            } 
      
    let userEmail=document.getElementById("userEmail");
      if (userEmail.value === '' || userEmail.value == null) {
        document.getElementById("emailError").innerHTML="Email is required";
        messages.push('email is required');
      }

      else if (!(userEmail.value.includes("@")  && userEmail.value.includes("."))) {
        document.getElementById("emailError").innerHTML="Enter Proper Email";
        messages.push('Enter Proper Email');
      }

      let userPhoneNumber=document.getElementById("userPhoneNumber");

      if (userPhoneNumber.value === '' || userPhoneNumber.value == null) {
        document.getElementById("phoneError").innerHTML="Phone Number is required";
        messages.push('phone number is required');
      }
      else if (userPhoneNumber.value.length !=10){
        document.getElementById("phoneError").innerHTML="Enter 10 digit phone number ";
        messages.push('Enter 10 digit phone number');
      }
      else if (!((userPhoneNumber.value/userPhoneNumber.value)==1)){
        document.getElementById("phoneError").innerHTML="Enter number only";
        messages.push('Enter number only');
      }


      let userPassword=document.getElementById("userPassword")

      if (userPassword.value === '' || userPassword.value == null) {
        document.getElementById("passwordError").innerHTML="password is required ";
        messages.push('password is required');
      }

      else if (userPassword.value.length<6){
        document.getElementById("passwordError").innerHTML="password should be 6 letter long ";
        messages.push('password should be 6 letter long ');
      }

      let confirmPassword=document.getElementById("confirmPassword")


      if (confirmPassword.value === '' || confirmPassword.value == null) {
        document.getElementById("confirmError").innerHTML="password is required";
        messages.push('password is required');
      }
      else if (confirmPassword.value != userPassword.value){
        document.getElementById("confirmError").innerHTML="password not matching";
        messages.push('password not matching');
      }


      let checkboxAgree=document.getElementById("exampleCheckbox12")
      
      if (!(checkboxAgree.checked == true)) {
        document.getElementById("checkboxError").innerHTML="please agree to terms and condition";
        messages.push('please agree to terms and condition');
      }

    
      if (messages.length > 0) {
        e.preventDefault()
      }
    })
 </script>


</html>