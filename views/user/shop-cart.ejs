    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/index.html" rel="nofollow">Home</a>
                    <span></span> Shop
                    <span></span> Your Cart
                </div>
            </div>
        </div>
        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table shopping-summery text-center clean">
                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col">Image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Subtotal</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>


                                    <% var sum=0; var cartItem=0;          %>
                                    <% cartData.forEach(function(item){ %>
                                        <%   sum=sum+item.subTotal  %>
                                        <%   cartItem=cartItem+item.products.quantity  %>
                                        <script>
                                            document.getElementById(cartItem).innerHTML= cartItem;            
                                         </script>
                                
                                    <tr>
                                        <td class="image product-thumbnail"><img src="/uploads/<%=   item.productInfo.image[0]     %>" alt="#"></td>
                                        <td class="product-des product-name">
                                            <h5 class="product-name"><a href="/shop-product-right.html/<%= item.productInfo._id %>"><%=   item.productInfo.name     %></a></h5>
                                            <!-- <p class="font-xs"><%=   item.productInfo.shortDescription   %>
                                            </p> -->
                                        </td>
                                        <td class="price" data-title="Price"><span> ₹</span><span id="<%= "unitRate"+item.products.productId %>"><%=   item.productInfo.sellingPrice   %></span></td>
                                        <td class="text-center" data-title="Stock">
                                            <div class="detail-qty border radius  m-auto">
                                                <a href="#" class="qty-down" onclick="return updateCart('<%- item.products.productId %>',-1)"><i class="fi-rs-angle-small-down"></i></a>
                                                <span class="qty-val" id="<%=   item.products.productId   %>" ><%=   item.products.quantity   %></span>
                                                <a href="#" class="qty-up" onclick="return updateCart('<%- item.products.productId %>',1)"><i class="fi-rs-angle-small-up"></i></a>
                                            </div>
                                        </td>
                                        <td class="text-right" data-title="Cart">
                                            <span id="<%= "subTotal"+item.products.productId %>"><%=   item.subTotal  %> </span>
                                        </td>
                                        <td class="action" data-title="Remove"><a href="/shop-cart.html/delete/<%= item.products.productId %>" class="text-muted"><i class="fi-rs-trash"></i></a></td>
                                    </tr>
                                    

                                    <%  }) %>

                                    
                                </tbody>
                            </table>
                        </div>
                        <div class="cart-action text-end">
                            <a class="btn " href="/index.html"><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a>
                        </div>
                        <div class="divider center_icon mt-50 mb-50"><i class="fi-rs-fingerprint"></i></div>
                        <div class="row mb-50">

                            <div class="col-lg-6 col-md-12">

                                <!-- <div class="mb-30 mt-50">
                                    <div class="heading_s1 mb-3">
                                        <h4>Apply Coupon</h4>
