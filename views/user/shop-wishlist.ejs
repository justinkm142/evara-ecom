                    <a href="index.html" rel="nofollow">Home</a>
                    <span></span> Shop
                    <span></span> Wishlist
                </div>
            </div>
        </div>
        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table shopping-summery text-center">
                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col" colspan="2">Product</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Stock Status</th>
                                        <th scope="col">Action</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    

                                    <% var sum=0; var cartItem=0;          %>
                                    <% cartData.forEach(function(item){ %>
                                        <%   sum=sum+item.subTotal  %>
                                        <%   cartItem=cartItem+item.products.quantity  %>
                                        
                                        <script>
                                            document.getElementById(cartItem).innerHTML= cartItem;            
                                         </script>



                                    <tr>
                                        <td class="image product-thumbnail"><img src="/uploads/<%=   item.productInfo.image[0]     %>" alt="#"></td>
                                        <td class="product-des product-name">
                                            <h5 class="product-name"><a href="/shop-product-right.html/<%= item.productInfo._id %>"><%=   item.productInfo.name     %></a></h5>
                                            <!-- <p class="font-xs"><%=   item.productInfo.shortDescription   %> -->
                                            </p>
                                        </td>
                                        <td class="price" data-title="Price"><span> â‚¹</span><span><%=   item.productInfo.sellingPrice   %> </span></td>
                                        <td class="text-center" data-title="Stock">
                                            <span class="color3 font-weight-bold">In Stock</span>
                                        </td>
                                        <td class="text-right" data-title="Cart">
                                            <button class="btn btn-sm" onclick="return addToCart('/wishList-addToCart/<%- item.products.productId %>')"><i class="fi-rs-shopping-bag mr-5"></i>Add to cart</button>
                                        </td>
                                        <td class="action" data-title="Remove"><a href="/shop-wishlist.html/delete/<%= item.products.productId %>" ><i class="fi-rs-trash"></i></a></td>
                                    </tr>
                                    
                                    <%  }) %>

                                </tbody>
                                
                            </table>
                            <% if (cartData.length==0){ %>

                                <h1 style="text-align: center;"> Wishlist Is Empty</h1>

                           <%  } %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div id="snackbar">Added to Cart</div>
    </main>


