        console.log("Product Id:  " + productId)
        console.log("PHOTO INDEX:  " + photoIndex)

        let data={
            productId:productId,
            photoIndex:photoIndex
        }

            $.ajax({
                type:'DELETE',
                url:'/admin/page-form-product-2.html/update',
                data: data,
                success:function(data){
                    console.log(data)
                    location.reload();

                },
                error: function(err){
