                                       <% }else{ %>
                                        <td> <span class="badge badge-pill badge-soft-danger"><%= item.paymentStatus%></span></td>
                                       <% } %>
                                        <td>  <i class="material-icons md-payment font-xxl text-muted mr-5"></i> <%= item.paymentMethod%> </td>
