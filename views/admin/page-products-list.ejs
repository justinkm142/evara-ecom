<%- include('../partials/adminHead.ejs') %>

<body>

    <%- include('../partials/adminNav.ejs') %>

   
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                    
                </div>
                <div>
                    
                    <a href="/admin/page-form-product-2.html" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row align-items-center">
                        
                        <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                            <select class="form-select">
                                <option selected>All category</option>
                                <option>Electronics</option>
                                <option>Clothes</option>
                                <option>Automobile</option>
                            </select>
                        </div>
                        
                        <div class="col-md-2 col-6">
                            <select class="form-select">
                                <option selected>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->


                <% product.forEach(function(item){ %>

                <div class="card-body">
                    <article class="itemlist">
                        <div class="row align-items-center">
                            <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name">
                                <a class="itemside" href="#">
                                    <div class="left">
                                        <img src="/uploads/<%=item.image[0]%>" class="img-sm img-thumbnail" alt="Item">
                                    </div>
                                    <div class="info">
                                        <h6 class="mb-0"><%=item.name%></h6>
                                    </div>
                                </a>
                            </div>
                            <div class="col-lg-1 col-sm-2 col-4 col-price"> <span><%=item.MRP%></span> </div>
                            <div class="col-lg-1 col-sm-2 col-4 col-price"> <span><%=item.sellingPrice%></span> </div>
                            <%if(item.status=="Selling"){%>
                            <div class="col-lg-2 col-sm-2 col-4 col-status">
                                <span class="badge rounded-pill alert-success"><%=item.status%></span>
                            </div>
                            <%}else{%>
                            <div class="col-lg-2 col-sm-2 col-4 col-status">
                                <span class="badge rounded-pill alert-danger"><%=item.status%></span>
                            </div>
                            <%}%>
                            <div class="col-lg-1 col-sm-2 col-4 col-date">
                                <span><%=item.stock%></span>
                            </div>
                            <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                <a href="/admin/page-form-product-2.html/update/<%=item._id%>" class="btn btn-md font-sm rounded btn-brand">
                                    <i class="material-icons md-edit"></i>
                                </a>
                                <a href="/admin/page-form-product-2.html/delete/<%=item._id%>" class="btn btn-md font-sm btn-light rounded" onclick="return confirm('are you sure to delete <%= item.name %>')">
                                    <i class="material-icons md-delete_forever"></i>
                                </a>
                            </div>
                        </div> <!-- row .// -->
     
                </div> <!-- card-body end// -->
                <% }) %>

            </div> <!-- card end// -->
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
                    </script> Â©, Evara - HTML Ecommerce Template .
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
    <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assets/js/vendors/select2.min.js"></script>
    <script src="assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="assets/js/main.js" type="text/javascript"></script>
</body>


